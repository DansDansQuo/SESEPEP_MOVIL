<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MPS.AppCliente.Views.CV.EntryView">
  <ContentView.Content>
        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*" HorizontalOptions="FillAndExpand">
            <Entry x:Name="entry" Grid.ColumnSpan="2" HorizontalOptions="FillAndExpand" VerticalOptions="Center" TextColor="White" FontSize="Body" HorizontalTextAlignment="Start"/>
            <Label x:Name="label" Grid.Row="1" Grid.Column="1" TextColor="Gray" FontSize="Small" HorizontalTextAlignment="Start" Margin="0,0,0,5"/>
            <Label x:Name="labelObligatorio" Grid.Row="1" FontSize="Small" HorizontalTextAlignment="Start" Margin="0"/>
        </Grid>
    </ContentView.Content>
</ContentView>